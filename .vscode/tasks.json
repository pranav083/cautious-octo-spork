{
    "tasks": [
        {
            "type": "shell",
            "label": "Build and run(g++-7)",
            "command": "",
            "args": [
                "cd",
                "${fileDirname}",
                "&&",
                "g++-7",
                "-std=c++14",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "rm",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never",
                // "showReuseMessage": false,
                "clear": true,
              }
        },
        {
            "label": "add + commit",
            "type": "shell",
            "command": "",
            "args": [
                // "cpp" :  "cd $dir && g++ -std=c++14 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt && rm $fileNameWithoutExt  && git add $fileName && git commit -s -m \"file code updated : $fileName\""
                "git",
                "add", 
                "${fileBasename}", 
                "&&", 
                "git",
                "commit",
                "-s",
                "-m",
                "file code updated : ${fileBasename}",
            ],
            "dependsOn" :[
                "Build and run(g++-7)",
            ],
            "problemMatcher":[],
            "presentation": {
                "focus": true
            }            
        },  
        {
            "label": "Commit Code",
            "type": "shell",
            "command": "",
            "args": [
                // "cpp" :  "cd $dir && g++ -std=c++14 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt && rm $fileNameWithoutExt  && git add $fileName && git commit -s -m \"file code updated : $fileName\"" 
                "git",
                "commit",
                "-s",
                "-m",
                "file code updated : ${fileBasename}",
            ],
            "dependsOn" :[
                "Build and run(g++-7)",
            ],
            "problemMatcher":[],
            "presentation": {
                "focus": true
            }
        }                
    ],
    "version": "2.0.0"
}