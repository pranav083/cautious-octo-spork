{
    "tasks": [
        {
            "type": "shell",
            "label": "Build and run(g++-7)",
            "command": "",
            "args": [
                "cd",
                "${fileDirname}",
                "&&",
                "g++-7",
                "-std=c++14",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "rm",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never",
                // "showReuseMessage": false,
                "clear": true,
              }
        },
        {
            "label": "build + commit",
            "type": "shell",
            "command": "",
            "args": [
                "cd",
                "${fileDirname}",
                "&&",
                "g++-7",
                "-std=c++14",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "rm",
                "${fileBasenameNoExtension}",
                "&&",
                "git",
                "add", 
                "${fileBasename}", 
                "&&", 
                "git",
                "commit",
                "-s",
                "-m",
                "\"file code updated : ${fileBasename}\"",
                "",
            ],

            "problemMatcher":[],
            "presentation": {
                "focus": true,
                "reveal": "never",
            },          
        },                 
    ],
    "version": "2.0.0"
}