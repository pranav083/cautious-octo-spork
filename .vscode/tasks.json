// https://stackoverflow.com/questions/57470525/how-can-i-run-a-vscode-command-as-a-task
// https://code.visualstudio.com/docs/editor/tasks
// https://www.thepolyglotdeveloper.com/2019/04/configure-visual-studio-code-cpp-development/
{
    "tasks": [
        {
            "label": "save all file",
            "type": "process",                  
            // "type": "shell",
            // "key": "ctrl+h",            // binding of your choice
            "command": "${command:workbench.action.files.saveAll}",

        },        
        {   
            "type": "shell",
            "label": "Build and run(g++-7)",            
            "command": "",
            "args": [
                "cd",
                "${fileDirname}",
                "&&",
                "g++-7",
                "-std=c++14",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "rm",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never",
                // "showReuseMessage": false,
                "clear": true,
            },
            "dependsOn" : [
                "save all file"
            ]
        },
        {
            "label": "build + commit",
            "type": "shell",
            "command": "",
            "args": [
                "cd",
                "${fileDirname}",
                "&&",
                "g++-7",
                "-std=c++14",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "&&",
                "./${fileBasenameNoExtension}",
                "&&",
                "rm",
                "${fileBasenameNoExtension}",
                "&&",
                "git",
                "add", 
                "${fileBasename}", 
                "&&", 
                "git",
                "commit",
                "-s",
                "-m",
                "\"file code updated : ${fileBasename}\"",
                "",
            ],

            "problemMatcher":[],
            "presentation": {
                "focus": true,
                "reveal": "never",
            },  
            "dependsOn" : [
                "save all file"
            ]                    
        },            
    ],
    "version": "2.0.0"
}